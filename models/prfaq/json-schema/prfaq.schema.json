{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://mdwriter.app/schemas/prfaq",
    "title": "PR/FAQ Document",
    "description": "Amazon-style Press Release and Frequently Asked Questions document for product proposals",
    "type": "object",
    "properties": {
        "title": {
            "description": "Product/Feature Name",
            "type": "string"
        },
        "product": {
            "description": "Product or team name",
            "type": "string"
        },
        "heading": {
            "description": "Press release heading (product name)",
            "type": "string"
        },
        "subtitle": {
            "description": "One-sentence description under the heading",
            "type": "string"
        },
        "problem": {
            "description": "What customer problem does this solve?",
            "type": "string"
        },
        "solution": {
            "description": "How does the product solve this problem?",
            "type": "string"
        },
        "customerQuote": {
            "description": "Quote from a hypothetical customer",
            "type": "string"
        },
        "howItWorks": {
            "description": "Brief description of how to get started",
            "type": "string"
        },
        "closingQuote": {
            "description": "Quote from company executive or team leader",
            "type": "string"
        },
        "faq": {
            "description": "Frequently asked questions",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "question": {
                        "description": "The question",
                        "type": "string"
                    },
                    "answer": {
                        "description": "The answer",
                        "type": "string"
                    },
                    "category": {
                        "description": "Question category (e.g., Customer, Technical, Business)",
                        "type": "string",
                        "enum": ["Customer", "Technical", "Business", "Internal", "External"]
                    }
                },
                "required": ["question", "answer"]
            }
        }
    },
    "required": ["title", "product", "heading", "problem", "solution"]
}