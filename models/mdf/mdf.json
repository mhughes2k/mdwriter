        "syllabus": {
            "displayAs": "Syllabus",
            "displayType": "textarea"
        },
        "aim": {
            "displayAs": "Module Aims",
            "displayType": "textarea"
        },
        "assessmentprinciples": {
            "displayAs": "Assessment Principles",
            "displayType": "textarea"
        },
        "assessmentstandard": {
            "displayAs": "Assessment Standard",
            "displayType": "textarea"
        },
        "resitprocedures": {
            "displayAs": "Resit Procedures",
            "displayType": "textarea"
        },
        "level": {
            "customForm": "level-selector"
        },
        "learningoutcomes": {
            "displayAs": "Learning Outcomes",
            "customForm": "learning-outcomes-editor"
        },
        "staff": {
            "displayAs": "Staff",
            "customForm": "staff-editor"
        },
        "format": {
            "displayAs": "Module Format",
            "customForm": "format-editor"
        },
        "assessmentmethods": {
            "displayAs": "Assessment Methods",
            "customForm": "assessment-methods-editor"
        },
        "resitmethods": {
            "displayAs": "Resit Methods",
            "customForm": "assessment-methods-editor"
        },
        "readinglist": {
            "displayAs": "Reading List",
            "customForm": "reading-list-editor"
        }
    },
    "customForms": {
