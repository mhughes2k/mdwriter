        },
        "staff-editor": {
            "type": "staff-editor",
            "implementation": "forms/staff-editor.js"
        },
        "format-editor": {
            "type": "format-editor",
            "implementation": "forms/format-editor.js"
        },
        "assessment-methods-editor": {
            "type": "assessment-methods-editor",
            "implementation": "forms/assessment-methods-editor.js"
        },
        "reading-list-editor": {
            "type": "reading-list-editor",
            "implementation": "forms/reading-list-editor.js"
        }
    }
