{
  "name": "mdwriter",
  "version": "0.1.0",
  "description": "ElectronJS based, cross platform, structured writing application for Module Descriptors",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "npm run copy-marked",
    "copy-marked": "cp node_modules/marked/marked.min.js src/renderer/marked.min.js || echo 'Marked not installed yet'",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --win --mac --linux"
  },
  "keywords": [
    "electron",
    "module-descriptor",
    "structured-writing"
  ],
  "author": "Michael Hughes",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.mdwriter.app",
    "productName": "MDWriter",
    "copyright": "Copyright Â© 2025 Phoenix Productions. All rights reserved.",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "models/**/*",
      "LICENSE.md",
      "docs/LICENSES.md"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "marked": "^12.0.0"
  }
}
