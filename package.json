{
  "name": "mdwriter",
  "version": "0.1.0",
  "description": "ElectronJS based, cross platform, structured writing application for Module Descriptors",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --win --mac --linux"
  },
  "keywords": [
    "electron",
    "module-descriptor",
    "structured-writing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.mdwriter.app",
    "productName": "MDWriter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "models/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1"
  }
}
