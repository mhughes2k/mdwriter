{
  "name": "mdwriter",
  "version": "0.1.0",
  "description": "ElectronJS based, cross platform, structured writing application for Module Descriptors",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "node scripts/copy-marked.js",
    "copy-marked": "node scripts/copy-marked.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --win --mac --linux"
  },
  "keywords": [
    "electron",
    "module-descriptor",
    "structured-writing"
  ],
  "author": "Michael Hughes",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "build": {
    "appId": "com.mdwriter.app",
    "productName": "MDWriter",
    "copyright": "Copyright Â© 2025 Phoenix Productions. All rights reserved.",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "models/**/*",
      "LICENSE.md",
      "docs/LICENSES.md"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "bonjour-service": "^1.3.0",
    "nanoid": "^5.1.6",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "marked": "^12.0.0",
    "pino": "^8.0.0"
  }
}
